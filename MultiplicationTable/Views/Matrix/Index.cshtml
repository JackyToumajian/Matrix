@model MultiplicationTable.Models.MatrixModel

@*@{
        Layout = null;
    }*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Html.BeginForm())
    {

       
            <div class="row" style="margin:5px;">
                <div class="col-md-4">Please enter the grid size:</div>
                <div class="col-md-4">
                    <input class="text-box single-line" name="matrix_size" id="matrix_size" type="number" min="3" max="15" value="@Model.matrix_size" />
                    </div>
                 
                </div>
            <div class="row" style="margin:5px;">
                <div class="col-md-2">Please enter the grid base:</div>
                <div class="col-md-4">
                    @Html.DropDownList("matrix_base",
                    new SelectList(Enum.GetValues(typeof(MultiplicationTable.Models.MatrixBase))),
                    new { @class = "form-control" })
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Refresh" />
                </div>

            </div>

    <div class="row">


        <div class="container col-md-2" style="width: auto; border: 2px solid blue; ">


            <div class="row" style="background-color: #ccccff; width:auto">
                @for (int i = 0; i <= Model.matrix_size; i++)
{
    if (i == 0)
    {
        <div class="col-sm-1 col-md-1" align="center" style="font-weight:bold;background-color:white;">
            X
        </div>
    }
    else
    {
        <div class="col-sm-1 col-md-1" align="center" style="font-weight:bold;">
            @Model.matrixModelItems[0, i]
        </div>
    }
}

            </div>


            @for (int i = 1; i <= Model.matrix_size; i++)
            {
                <div class="row " style="width: auto">
                    <div class="col-sm-1 col-md-1" align="center" style="font-weight: bold; background-color: #ccccff; ">
                        @Model.matrixModelItems[i, 0]
                    </div>
                    @for (int j = 1; j <= Model.matrix_size; j++)
{
    <div class="col-sm-1 col-md-1" align="center" data-toggle="tooltip" title="@i x @j=@Model.matrixModelItems[i, j]" style="border-left:1px solid; border-top:1px solid;">
        @Model.matrixModelItems[i, j]
    </div>
}
                </div>



            }


        </div>

    </div>


    }
</body>
</html>
